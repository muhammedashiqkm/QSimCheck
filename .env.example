# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Configuration
# A strong, randomly generated secret key
JWT_SECRET_KEY=your_jwt_secret_key_here

# Single User Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
USE_DATABASE_AUTH=false

# Database Configuration
# Leave these empty to use SQLite for development
# For MySQL:
DB_USER=dbuser
DB_PASSWORD=dbpassword
DB_HOST=db
DB_NAME=college_db

# For local development with docker-compose
DB_ROOT_PASSWORD=rootpassword

# Allowed domains for question URLs (comma-separated)
ALLOWED_DOMAINS=api.example.com,questions.yourdomain.com,localhost